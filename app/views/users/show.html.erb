<div class="relative min-h-screen">
  <div class="absolute top-0 left-0 w-full h-full bg-[url('/images/ma-zyan.png')] bg-center bg-no-repeat"style="background-size: 100% 100%; opacity: 0.2;"></div>
  <div class="relative z-10">
    <div style="display: flex; flex-direction: column; align-items: center; gap: 50px;">
      <h1 style="font-size: 3em;">
        <%= @user.name %>さんの対戦履歴
      </h1>

      <div>
        <%= render "users/form" %>
      </div>

      <div id="scores-container">
        <%= render "users/scores", scores: @user.scores, user: @user %>
      </div>
    </div>
  </div>
</div>