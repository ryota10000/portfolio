<header class="text-align: center;">
  <div class="container flex items-start justify-between p-6 min-w-full" style="justify-content: space-between;">
    <%= link_to "使い方の説明", help_path, data: { turbo: false }, class: "font-medium border border-black p-2 hover:bg-gray-200"%>

    <div class="items-center h-full">
      <% if current_user %>
        <div class="flex">
          <p class="inline-block mr-5 font-medium">
            LoginUser: <%= current_user.name %>
          </p>
          <a href="<%= battle_score_path %>" class="mr-5 font-medium border border-black p-2 hover:bg-gray-200">対戦履歴</a>
          <%= button_to "ログアウト", logout_path, method: :post, data: { turbo: false }, class: "mr-5 font-medium hover:text-gray-900 border border-black p-2 hover:bg-gray-200" %>
        </div>
      <% else %>
        <%= button_to "Googleでログイン", "/auth/google_oauth2", method: :post, data: { turbo: false }, class: "mr-5 font-medium hover:text-gray-900 border border-black p-2 hover:bg-gray-200" %>
      <% end %>
    </div>
  </div>
</header>
